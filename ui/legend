var style = require("users/dawnschumacher/nasa-eej:ui/map-style");

function get_legend() {
  
  // Create the base for the legend.
  var legend = ui.Panel({
    style: {
        width: '30%'
    }
  });
  
  // Add the top navigation bar.
  legend.add(get_navbar());
  
  return legend;
}

function get_navbar() {
  
  var navbar = ui.Panel({
    style: style.navbar
  });
  
  // Add the navbar buttons to the navigation panel.
  navbar.add(
    ui.Button({
      label: "About",
      style: style.navbar_button
    })
  );
  navbar.add(
    ui.Button({
      label: "Univariate Data",
      style: style.navbar_button
    })
  );
  navbar.add(
    ui.Button({
      label: "Bivariate Data",
      style: style.navbar_button
    })
  );
  
  return navbar;
}

exports.get_legend = get_legend;