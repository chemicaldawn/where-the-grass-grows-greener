var style = require("users/dawnschumacher/nasa-eej:ui/legend-style");

function get_legend() {
  
  // Create the base for the legend.
  var legend = ui.Panel({
    style: {
        width: '30%'
    }
  });
  
  // Add the top navigation bar.
  legend.add(get_navbar());
  
  return legend;
}

function get_navbar() {
  
  var navbar = ui.Panel({
    layout: ui.Panel.Layout.flow('vertical'),
    style: style.navbar
  });
  
  var button_row = ui.Panel({
    layout: ui.Panel.Layout.flow('horizontal'),
  })
  
  // Add the navbar buttons to the navigation panel.
  button_row.add(
    ui.Button({
      label: "About",
      style: style.navbar_button
    })
  );
  button_row.add(
    ui.Button({
      label: "Univariate Data",
      style: style.navbar_button
    })
  );
  button_row.add(
    ui.Button({
      label: "Bivariate Data",
      style: style.navbar_button
    })
  );
  
  
  navbar.add(button_row);
  navbar.add(nav_highlight);
  
  return navbar;
}

exports.get_legend = get_legend;